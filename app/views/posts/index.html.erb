<% if @mode == 'all' %><h1 class="title">記事一覧</h1>
<% else %><h1 class="title">マイ記事</h1>
<% end %>



<%= link_to '新規投稿', new_post_path, :class => "button is-primary" %>

<table class="table">
  <thead>
  <tr>
    <th>作成者</th>
    <th>タイトル</th>
    <th>本文</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.user.username %></td>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to '見る', post, :class => "button is-light" %></td>
      <% if post.user_id == current_user.id %>
        <td><%= link_to '編集', edit_post_path(post), :class => "button is-primary" %></td>
        <td><%= link_to '削除', post, method: :delete, data: {confirm: '本当に削除しても良いですか?'}, :class => "button is-danger" %></td>
      <% else %>
        <td colspan="2">
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
