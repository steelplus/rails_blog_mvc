<h1 class="title">記事一覧</h1>


<%= link_to '新規投稿', new_post_path, :class => "button is-primary" %>

<table class="table">
  <thead>
  <tr>
    <th>タイトル</th>
    <th>本文</th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to '見る', post, :class => "button is-light" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
