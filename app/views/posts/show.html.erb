<div class="card">
  <header class="card-header">
    <p class="card-header-title">
      <%= @post.title %>
    </p>
  </header>
  <div class="card-content">
    <div class="content">
      <%= simple_format(h(@post.content)) %>
    </div>
  </div>
</div>

<br>

<% if @post.user_id == current_user.id %>
  <%= link_to '編集する', edit_post_path(@post), :class => "button is-primary" %>
<% end %>
