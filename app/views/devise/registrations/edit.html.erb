<h1 class="title">プロフィール変更</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br/>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password %> <i>(変更する場合のみ入力してください)</i><br/>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br/>
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(パスワードを変更するために必要です)</i><br/>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "変更" , :class => "button is-primary"%>
  </div>
<% end %>

<%= button_to "アカウント削除", registration_path(resource_name), :class => "button is-danger", data: {confirm: "アカウントを削除しますか？"}, method: :delete %>

<br>

<%= link_to "戻る", :back , :class => "button is-light"%>
